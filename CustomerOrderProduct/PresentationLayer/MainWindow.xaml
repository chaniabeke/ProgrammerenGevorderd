<Window x:Class="PresentationLayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PresentationLayer"
        mc:Ignorable="d"
        Title="ManagementApp" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem x:Name="MenuItem_File" Header="File">
                <MenuItem x:Name="MenuItem_Close" Header="Close" Click="MenuItem_Close_Click" />
            </MenuItem>
            <MenuItem x:Name="Management" Header="Management">
                <MenuItem x:Name="MenuItem_Customers" Header="Customers" Click="MenuItem_Customers_Click" />
                <MenuItem x:Name="MenuItem_Orders" Header="Orders" Click="MenuItem_Orders_Click" />
                <MenuItem x:Name="MenuItem_Products" Header="Products" Click="MenuItem_Products_Click" />
            </MenuItem>
        </Menu>
        <Frame x:Name="changingWindow"  NavigationUIVisibility="Hidden" Source="Pages\HomePage.xaml">
        </Frame>
    </DockPanel>
</Window>